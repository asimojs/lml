{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "lib",
    "esModuleInterop": true,
    "module": "ESNext",
    "declaration": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": false,
    "preserveConstEnums": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__",
    "**/__mocks__"
  ],
  "include": [
    "src/**/*"
  ]
}
